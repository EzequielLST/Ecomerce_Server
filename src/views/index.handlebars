<h1>Lista de Productos</h1>
<ul>
  {{#each products}}
    <li>
      <strong>{{title}}</strong> - {{description}} - ${{price}}
      <a href="/products/{{id}}">Ver detalles</a>
      <button onclick="addToCart({{id}})">Agregar al carrito</button>
    </li>
  {{/each}}
</ul>

<!-- Paginación -->
<div class="pagination">
  {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}&limit={{limit}}">Página anterior</a>
  {{/if}}
  <span>Página {{page}} de {{totalPages}}</span>
  {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}&limit={{limit}}">Página siguiente</a>
  {{/if}}
</div>

<script>
  // Función para agregar al carrito
  function addToCart(productId) {
    fetch(`/api/carts/{{cartId}}/product/${productId}`, { method: 'POST' })
      .then(response => response.json())
      .then(data => {
        alert('Producto agregado al carrito');
      });
  }
</script>
